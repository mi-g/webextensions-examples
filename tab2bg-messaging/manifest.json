{
  "description": "messaging between an extension tab and a background page",
  "manifest_version": 2,
  "name": "tab2bg-messaging",
  "version": "1.0",
  "applications": {
    "gecko": {
      "id": "tab2bg-messaging@mozilla.org"
    }
  },
  "permissions": ["tabs"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "Open extension tab"
  }
}
